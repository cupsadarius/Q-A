{% extends 'home.html.twig' %}
{% block header %}{% endblock %}
{% block content %}
    {% if( data.questions) %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Questions in {{ data.current_section }} section</h3>
            </div>
            <div class="panel-body">
                {% for question in data.questions %}
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h3 class="panel-title">{{ question.question }}</h3>
                        </div>
                        <div class="panel-body">
                            <p>{{ question.description }}</p>
                        </div>
                        <div class="panel-footer text-right">
                            <a class="btn btn-default" href="{{ data.base_url }}/question/view/{{ question.id }}">Read answers</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% else %}
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h3 class="panel-title">Notice</h3>
            </div>
            <div class="panel-body">
                <p class="lead">We do not have any questions in this section!</p>
                <p>You can add it if you want!</p>
            </div>
        </div>
    {% endif %}
{% endblock %}